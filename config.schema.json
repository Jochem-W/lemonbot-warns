{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Config",
  "type": "object",
  "properties": {
    "bot": {
      "description": "Bot configuration",
      "type": "object",
      "properties": {
        "applicationId": {
          "description": "The Discord application ID",
          "type": "string",
          "pattern": "^\\d+$"
        }
      },
      "required": [
        "applicationId"
      ]
    },
    "guild": {
      "description": "Guild configuration",
      "type": "object",
      "properties": {
        "errorChannel": {
          "description": "The channel to log errors in",
          "type": "string",
          "pattern": "^\\d+$"
        },
        "id": {
          "description": "The guild to register commands for",
          "type": "string",
          "pattern": "^\\d+$"
        },
        "privateChannels": {
          "description": "List of channels where bot replies are publicly visible",
          "type": "array",
          "items": [
            {
              "type": "string",
              "pattern": "^\\d+$"
            }
          ]
        },
        "restart": {
          "description": "Restart message configuration",
          "type": "object",
          "properties": {
            "channel": {
              "description": "The channel to send restart messages in",
              "type": "string",
              "pattern": "^\\d+$"
            },
            "user": {
              "description": "The user that is mentioned in restart messages",
              "type": "string",
              "pattern": "^\\d+$"
            }
          },
          "required": [
            "channel"
          ]
        },
        "warnCategory": {
          "description": "The category under which warning channels are created",
          "type": "string",
          "pattern": "^\\d+$"
        },
        "warnLogsChannel": {
          "description": "The channel to send warning logs in",
          "type": "string",
          "pattern": "^\\d+$"
        }
      },
      "required": [
        "errorChannel",
        "id",
        "privateChannels",
        "restart",
        "warnCategory",
        "warnLogsChannel"
      ]
    },
    "icons": {
      "description": "Embed author icon configuration",
      "type": "object",
      "properties": {
        "fail": {
          "description": "The embed author icon to use on fail",
          "type": "string",
          "format": "uri",
          "pattern": "^https://.+$"
        },
        "success": {
          "description": "The embed author icon to use on success",
          "type": "string",
          "format": "uri",
          "pattern": "^https://.+$"
        },
        "warning": {
          "description": "The embed author icon to use in the warning message",
          "type": "string",
          "format": "uri",
          "pattern": "^https://.+$"
        }
      },
      "required": [
        "fail",
        "success",
        "warning"
      ]
    },
    "repository": {
      "description": "GitHub repository configuration",
      "type": "object",
      "properties": {
        "owner": {
          "description": "The owner of the repository",
          "type": "string",
          "pattern": "^[A-z0-9-]+$"
        },
        "name": {
          "description": "The name of the repository",
          "type": "string",
          "pattern": "^[A-z0-9_.-]+$"
        }
      },
      "required": [
        "owner",
        "name"
      ]
    }
  },
  "required": [
    "bot",
    "guild",
    "icons",
    "repository"
  ]
}