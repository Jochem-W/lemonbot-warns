generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Colour {
  LIGHT_GREY
  GREY
  RED
  ORANGE
  AMBER
  YELLOW
  LIME
  GREEN
  EMERALD
  TEAL
  CYAN
  SKY
  BLUE
  INDIGO
  VIOLET
  PURPLE
  FUCHSIA
  PINK
  ROSE
}

enum Notified {
  SILENT
  NOT_IN_SERVER
  DM
  DMS_DISABLED
  CHANNEL
  REGULAR_BAN
}

enum Penalised {
  NOT_IN_SERVER
  APPLIED
  NO_PENALTY
}

model User {
  id       String  @id
  priority Boolean

  warnings Warning[]
}

model Warning {
  id Int @id @default(autoincrement())

  createdAt   DateTime
  createdBy   String
  description String?
  silent      Boolean
  notified    Notified?
  penalised   Penalised?

  messageId String?

  penalty   Penalty @relation(fields: [penaltyId], references: [id])
  penaltyId Int

  reasons Reason[]

  user   User   @relation(fields: [userId], references: [id])
  userId String

  images Image[]
}

model Image {
  id Int @id @default(autoincrement())

  url   String
  extra Boolean

  warning   Warning @relation(fields: [warningId], references: [id])
  warningId Int
}

model Reason {
  id Int @id @default(autoincrement())

  colour Colour
  name   String @unique

  warnings Warning[]
}

model Penalty {
  id Int @id @default(autoincrement())

  colour Colour
  name   String @unique

  ban            Boolean
  kick           Boolean
  timeout        Int?
  deleteMessages Boolean
  hidden         Boolean @default(false)

  warnings Warning[]
}
